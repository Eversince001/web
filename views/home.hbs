
<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add new user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.firs_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end"> 
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light bnt-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light bnt-small"><i class="bi bi-pencil"></i> Edit</a>  
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>


<div class="row">
  <div class="col-6"><h1>Bots</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addbot" type="button" class="btn btn-primary align-self-center">+ add new bot</a>
  </div>
</div>


<table class="table table-bordered">
  <thead class="thead-dark"> 
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Comment</th>
      <th scope="col">Status</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each bots}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.ind}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.comments}}</td>
      <td>{{this.status}}</td>
      <td class="text-end"> 
        <a href="/viewbot/{{this.id}}" type="button" class="btn btn-light bnt-small"><i class="bi bi-eye"></i> View</a>
        <a href="/editbot/{{this.id}}" type="button" class="btn btn-light bnt-small"><i class="bi bi-pencil"></i> Edit</a>   
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

